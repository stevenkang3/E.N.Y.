          <form action='/joins' method='post'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <input type='hidden' name='event_id' value='<%= e.id %>'>
            <input type='hidden' name='user_id' value='<%= @user.id %>'>
