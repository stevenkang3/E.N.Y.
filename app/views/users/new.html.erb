<link rel="stylesheet/new.css" href="/stylesheets/new.css" media="screen">
<h2 class='animated bounceInDown' id='title'> Register</h2>
<div class="row">
  <div class="col-xs- 3 col-sm-5 col-md-5 col-lg-7">
    <form  action="/users" method="post" enctype="multipart/form-data">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class='row'>
        <div class="animated bounceInDown col-md-12 col-xs-12" id='events'></div>
        <h3 class="animated lightSpeedIn col-sm-12 col-xs-12" id='nearYou'>Near You</h3>
        <div class="col-xs-6">
          <label for="first_name">First Name</label>
          <input id='first_name' class='form-control input-sm' type="text" name="user[first_name]" value=""><br>
        </div>
        <div class="col-xs-6">
          <label for="last_name">Last Name</label>
          <input id='last_name' class='form-control input-sm' type="text" name="user[last_name]" value=""><br>
        </div>
      </div>
      <div class='row'>
        <div class="col-xs-6">
          <label for="email">Email</label>
          <input id='email' class='form-control input-sm' type="text" name="user[email]" value=""><br>
        </div>
        <div class="col-xs-6">
          <label for="location">Location</label>
          <input id='location' class='form-control input-sm' type="text" name="user[location]" placeholder="City of Residence"><br>
        </div>
      </div>

      <div class='row'>
        <div class="col-xs-4">
          <label for="state">County</label>
          <select class='form-control input-sm' id='state' name="user[state]">
            <% @counties.each do |county| %>
            <option><%=county%></option>
            <<%end%>
          </select><br>
        </div>
        <div class="col-xs-8">
          <label for='image'>Image</label>
          <input id='image' class='form-control input-sm' type="file" name="user[image]"><br>
        </div>
      </div>
      <div class='row'>
        <div class="col-xs-6">
          <label for="password">Password</label>
          <input id='password' class='form-control input-sm' type="password" name="user[password]" value=""><br>
        </div>
        <div class="col-xs-6">
          <label for="password_confirmation">Password Confirmation</label>
          <input id='password_confirmation'class='form-control input-sm' type="password" name="user[password_confirmation]" value=""><br><br>
        </div>
      </div>
      <input type="submit" value="Join">
      <a href="/sessions/new"> Already a Member?</a>
    </form>
  </div>
  <div class="col-xs-9 col-sm-7 col-md-7 col-lg-5">
    <!-- <div class="animated bounceInDown col-md-12 col-xs-12" id='events'></div>
    <h3 class="animated lightSpeedIn col-sm-12 col-xs-12" id='nearYou'>Near You</h3> -->
  </div>
</div><br>
