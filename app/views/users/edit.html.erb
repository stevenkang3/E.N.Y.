<style media="screen">
#edits {
  -webkit-background-size: 100% auto;
  -moz-background-size: 100% auto;
  -o-background-size: 100% auto;
  background:url(http://logos.textgiraffe.com/logos/logo-name/Edit-designstyle-candy-m.png)no-repeat center center;
  background-size:100% auto;
  height: 300px;
}
#form {
  height: 100%;
}
.imagePic{
  width:100px;
  height:100px;
  /*margin-left: 20px;*/
}
</style>
<h2> EDIT PAGE</h2><br>
<a class='animated shake' href="/users">Back</a>
<hr>
<div class="row">
<div class="animated bounceInDown col-md-3 col-offset-1" id='form'>
<div ><img class="imagePic"src="<%=@user.image.url%>"></div><br>
<form  action="/users/<%= @user.id %>" method="post" enctype="multipart/form-data">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<input type='hidden' name='_method' value='patch'>
<label for="first_name">First Name</label>
<input id='first_name' class='form-control input-sm' type="text" name="user[first_name]" value="<%= @user.first_name %>">
<label for="last_name">Last Name</label>
<input id='last_name' class='form-control input-sm' type="text" name="user[last_name]" value="<%= @user.last_name %>">
<label for="email">Email</label>
<input id='email' class='form-control input-sm' type="text" name="user[email]" value="<%= @user.email %>">
<label for="location">Location</label>
<input id='location' class='form-control input-sm' type="text" name="user[location]" value="<%= @user.location %>">
<label for="state">State</label>
<select id="state" class='form-control input-sm' name="user[state]">
<% @states.each do |state| %>
<% if(state == @user.state) %>
<option selected="select"><%= state %></option>
<% else %>
<option><%= state %></option>
<%end %>
<%end %>
</select>
<label for='image'>Image</label>
<input id='image' class='form-control input-sm' type="file" name="user[image]">
<label for="password">Password</label>
<input id='password' class='form-control input-sm' type="password" name="user[password]" placeholder="New Password">
<label for="password_confirmation">Password Confirmation</label>
<input id='password_confirmation' class='form-control input-sm' type="password" name="user[password_confirmation]" placeholder="Confirm Password"><br>
<input type="submit" class='btn-primary' value="Update">
</form>
</div>
<div class="col-md-8">
  <div class="animated flip col-md-12 col-xs-12" id='edits'>
  </div>
</div>
</div><br>
